{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es2019",
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
